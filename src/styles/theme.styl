main-color = #323a3e
highlight-color = #7a8881
important-color = #a11212

.shower.full
	background-color: #111

.shower.list .slide.active
	box-shadow: 0 0 0 1px highlight-color, 0 0 0 20px highlight-color, 0 20px 50px rgba(0, 0, 0, .3);

.slide::after
	color highlight-color
	background none
	height 75px
	right 20px
.slide::before
	position absolute
	top: 75px;
	right: 100px;
	height 50px
.slide
	padding-top 60px
	padding-left 60px

	&.no-top
		padding-top: 0

	&.center
		text-align: center

	h2
		color: main-color



.hightlight
.important
.alert
	border-radius 0.2em
	padding 0.1em 0.3em
.hightlight
	background #fafaa2
.hightlight *
	color #000 !important
.important
	background important-color
	color #fff
.important *
	color #fff !important
.alert
	background #D10A0A
	color #fff
.alert *
	color #fff !important
.comment
	color #999999
	
.progress
	border-color highlight-color rgba(0, 0, 0, 0) highlight-color highlight-color
	

.tag
	color #AD1531
.attr
	color #4F7302

.slide
	p.center
		text-align center
		img
			max-width 100%

	p.quote
		text-align center
		font-style italic

	&.no-page
		&::after
			visibility: hidden;

	.copyright
		position: absolute
		right 10px
		bottom 20px
		transform: translateX(100%) rotate(-90deg)
		transform-origin: 0 100%;
		font-size: 12px
		color: highlight-color

		&.white
			color: #fff

		
	
blockquote
	font-size 35px	
	line-height 1.4
	
figcaption
	opacity 0.5
	position: relative
	line-height: 1.6
	margin-top: 40px !important